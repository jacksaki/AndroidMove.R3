<UserControl
    x:Class="AndroidMove.R3.Views.AndroidDeviceBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:AndroidMove.R3.Views"
    xmlns:vm="clr-namespace:AndroidMove.R3.ViewModels"
    xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
    Background="LightYellow"
    FontSize="18"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button
                x:Name="CaptureAndPullButton"
                Width="120"
                Height="50"
                Margin="4"
                Command="{Binding CaptureAndPullCommand}"
                Style="{StaticResource MaterialDesignRaisedButton}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <wpf:PackIcon
                            Width="28"
                            Height="28"
                            Kind="Smartphone" />
                        <wpf:PackIcon
                            Width="28"
                            Height="28"
                            Kind="ArrowRight" />
                        <wpf:PackIcon
                            Width="28"
                            Height="28"
                            Kind="Computer" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button
                Width="120"
                Height="50"
                Margin="3"
                Command="{Binding CaptureCommand}"
                Content="{wpf:PackIcon Kind=Smartphone,
                                       Size=28}"
                Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button
                Width="120"
                Height="50"
                Margin="3"
                Command="{Binding FileListCommand}"
                Content="{wpf:PackIcon Kind=Files,
                                       Size=28}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Visibility="Hidden" />
            <Button
                Width="120"
                Height="50"
                Margin="3"
                Command="{Binding SettingsCommand}"
                Content="{wpf:PackIcon Kind=Cog,
                                       Size=28}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Visibility="Hidden" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <StackPanel Margin="4" Orientation="Horizontal">
                <ToggleButton
                    Width="40"
                    Height="40"
                    Margin="4"
                    Content="-"
                    IsChecked="{Binding WithClipboard.Value, Mode=TwoWay}"
                    Style="{StaticResource MaterialDesignActionLightToggleButton}" />
                <TextBlock VerticalAlignment="Center" Text="クリップボードにコピー" />
            </StackPanel>
            <Separator />
            <ToggleButton
                Width="40"
                Height="40"
                Margin="4"
                wpf:ToggleButtonAssist.OnContent="幅"
                Content="高さ"
                IsChecked="{Binding WidthSelected.Value, Mode=TwoWay}"
                Style="{StaticResource MaterialDesignActionLightToggleButton}" />
            <StackPanel Margin="4" Orientation="Horizontal">
                <wpf:NumericUpDown
                    Margin="4"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Center"
                    Minimum="40"
                    Value="{Binding PixelSize.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock VerticalAlignment="Center" Text="ピクセル" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
