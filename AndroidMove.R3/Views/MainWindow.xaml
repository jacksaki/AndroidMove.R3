<mahApps:MetroWindow
    x:Class="AndroidMove.R3.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dlg="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:m="AndroidMove.R3.Models"
    xmlns:mahApps="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:v="clr-namespace:AndroidMove.R3.Views"
    xmlns:vm="clr-namespace:AndroidMove.R3.ViewModels"
    xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="{Binding AppFullTitle}"
    dlg:DialogParticipation.Register="{Binding}"
    Background="{DynamicResource MaterialDesignPaper}"
    BorderThickness="1"
    Cursor=""
    FontFamily="pack:application,,,/MaterialDesignThemes.Wpf;conponent/Resources/Roboto/#Roboto"
    GlowBrush="{DynamicResource AccentColorBrush}"
    ResizeMode="NoResize"
    ShowTitleBar="True"
    SizeToContent="WidthAndHeight"
    Style="{StaticResource MaterialDesignWindow}"
    TextElement.FontSize="22"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    TitleCharacterCasing="Normal"
    Topmost="{Binding ElementName=isTopMost, Path=IsChecked}"
    mc:Ignorable="d">
    <mahApps:MetroWindow.Resources>
        <v:BooleanToOpacityConverter
            x:Key="BooleanToOpacityConverter"
            FalseOpacity="0.4"
            TrueOpacity="1.0" />
    </mahApps:MetroWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0" Cursor="">
            <ToggleButton
                x:Name="isTopMost"
                Margin="4"
                Content="{wpf:PackIcon Kind=Pin}"
                Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                ToolTip="最前面固定" />
            <ToggleButton
                Margin="4"
                Content="{wpf:PackIcon Kind=ClipboardAdd}"
                IsChecked="{Binding WithClipboard.Value, Mode=TwoWay}"
                Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}" />
            <Separator />
            <ToggleButton
                Width="40"
                Height="40"
                Margin="4"
                wpf:ToggleButtonAssist.OnContent="幅"
                Content="高さ"
                IsChecked="{Binding WidthSelected.Value, Mode=TwoWay}"
                Style="{StaticResource MaterialDesignActionLightToggleButton}" />
            <StackPanel Margin="4" Orientation="Horizontal">
                <wpf:NumericUpDown
                    Width="130"
                    Margin="4"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Center"
                    FontSize="22"
                    Minimum="40"
                    Style="{StaticResource MaterialDesignFloatingHintNumericUpDown}"
                    Value="{Binding PixelSize.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock VerticalAlignment="Center" Text="ピクセル" />
            </StackPanel>
            <Separator />
            <Button
                Command="{Binding ConfigCommand}"
                Content="{wpf:PackIcon Kind=Cog}"
                Style="{StaticResource MaterialDesignRaisedLightButton}" />
        </ToolBar>
        <ItemsControl
            Grid.Row="1"
            Margin="4"
            ItemsSource="{Binding DeviceViewModels}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <wpf:Card>
                        <v:AndroidDeviceBox Margin="3" DataContext="{Binding}" />
                    </wpf:Card>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <wpf:Snackbar
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            MessageQueue="{Binding SnackbarMessageQueue}" />
    </Grid>
</mahApps:MetroWindow>
